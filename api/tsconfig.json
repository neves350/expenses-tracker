{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ES2021",

		"baseUrl": ".",
		"paths": {
			"src/*": ["src/*"]
		},

		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,

		"outDir": "./dist",
		"sourceMap": true,
		"incremental": true,
		"skipLibCheck": true,

		"strictNullChecks": true
	}
}
