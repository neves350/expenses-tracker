generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  passwordHash String   @map("password_hash")
  avatarUrl    String?  @default("default") @map("avatar_url")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  token   Token[]
  goals   Goal[]
  wallets Wallet[]

  @@map("users")
}

enum TokenType {
  PASSWORD_RECOVER
}

model Token {
  id        String    @id @default(uuid())
  type      TokenType
  userId    String    @map("user_id")
  createdAt DateTime  @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tokens")
}

model Goal {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  title     String
  amount    Decimal
  deadline  DateTime
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("goals")
}

model Wallet {
  id        String     @id @default(uuid())
  userId    String     @map("user_id")
  name      String
  type      WalletType
  currency  Currency
  balance   Decimal    @db.Decimal(12, 2)
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  transactions Transaction[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("wallets")
}

enum Currency {
  EUR
  USD
}

enum WalletType {
  CASH
  BANK_ACCOUNT
  CREDIT_CARD
  DIGITAL_WALLET
  INVESTMENT
}

model Category {
  id        String   @id @default(uuid())
  icon      String
  title     String
  type      Type
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  transactions Transaction[]

  @@map("categories")
}

model Transaction {
  id         String   @id @default(uuid())
  walletId   String   @map("wallet_id")
  categoryId String   @map("category_id")
  type       Type
  amount     Decimal
  date       DateTime
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  wallet   Wallet   @relation(fields: [walletId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@map("transactions")
}

enum Type {
  INCOME
  EXPENSE
}
