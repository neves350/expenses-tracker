generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  passwordHash String   @map("password_hash")
  avatarUrl    String?  @default("default") @map("avatar_url")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  token        Token[]
  goals        Goal[]
  cards        Card[]
  bankAccounts BankAccount[]
  transfer     Transfer[]
  categories   Category[]

  @@map("users")
}

enum TokenType {
  PASSWORD_RECOVER
}

model Token {
  id        String    @id @default(uuid())
  type      TokenType
  code      String    @unique @db.VarChar(5)
  userId    String    @map("user_id")
  createdAt DateTime  @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tokens")
}

model Goal {
  id            String       @id @default(uuid())
  userId        String       @map("user_id")
  categoryId    String?      @map("category_id")
  bankAccountId String?      @map("bank_account_id")
  title         String
  amount        Decimal      @db.Decimal(12, 2)
  currentAmount Decimal      @default(0) @map("current_amount") @db.Decimal(12, 2)
  startDate     DateTime     @default(now()) @map("start_date")
  endDate       DateTime?    @map("end_date")
  type          GoalType     @default(SAVINGS)
  deposits      Deposit[]
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  category      Category?    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  bankAccount   BankAccount? @relation(fields: [bankAccountId], references: [id], onDelete: Cascade)
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")

  @@map("goals")
}

enum GoalType {
  SAVINGS
  SPENDING_LIMIT
}

model Deposit {
  id        String   @id @default(uuid())
  goalId    String   @map("goal_id")
  amount    Decimal  @db.Decimal(12, 2)
  date      DateTime @default(now())
  note      String?
  goal      Goal     @relation(fields: [goalId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("deposits")
}

model Card {
  id            String        @id @default(uuid())
  userId        String        @map("user_id")
  bankAccountId String        @map("bank_account_id")
  name          String
  color         CardColor     @default(GRAY)
  type          CardType
  lastFour      String?       @map("last_four") @db.VarChar(4)
  creditLimit   Decimal?      @map("credit_limit") @db.Decimal(12, 2)
  closingDay    Int?          @map("closing_day")
  dueDay        Int?          @map("due_day")
  transactions  Transaction[]
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  bankAccount BankAccount @relation(fields: [bankAccountId], references: [id], onDelete: Cascade)

  @@map("cards")
}

enum CardColor {
  GRAY
  RED
  GREEN
  BLUE
  PURPLE
  ORANGE
  YELLOW
  PINK
}

enum CardType {
  CREDIT_CARD
  DEBIT_CARD
}

model BankAccount {
  id             String        @id @default(uuid())
  userId         String        @map("user_id")
  name           String
  type           BankType      @default(CHECKING)
  currency       BankCurrency  @default(EUR)
  balance        Decimal       @db.Decimal(12, 2)
  initialBalance Decimal       @default(0) @map("initial_balance") @db.Decimal(12, 2)
  cards          Card[]
  transactions   Transaction[]
  transfersFrom  Transfer[]    @relation("from_transfers")
  transfersTo    Transfer[]    @relation("to_transfers")
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  goals          Goal[]

  @@map("bank_accounts")
}

enum BankType {
  WALLET
  CHECKING
  SAVINGS
  INVESTMENT
}

enum BankCurrency {
  EUR
  USD
}

model Transfer {
  id            String         @id @default(uuid())
  userId        String         @map("user_id")
  fromAccountId String         @map("from_account_id")
  toAccountId   String         @map("to_account_id")
  amount        Decimal        @db.Decimal(12, 2)
  date          DateTime
  description   String?
  status        TransferStatus @default(PENDING)
  executedAt    DateTime?      @map("executed_at")
  createdAt     DateTime       @default(now()) @map("created_at")
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  fromAccount   BankAccount    @relation("from_transfers", fields: [fromAccountId], references: [id])
  toAccount     BankAccount    @relation("to_transfers", fields: [toAccountId], references: [id])

  @@map("transfers")
}

enum TransferStatus {
  PENDING
  COMPLETED
  CANCELLED
}

model Category {
  id           String        @id @default(uuid())
  userId       String        @map("user_id")
  title        String
  icon         String
  isDefault    Boolean       @default(false) @map("is_default")
  type         Type
  transactions Transaction[]
  goals        Goal[]
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("categories")
}

model Transaction {
  id            String      @id @default(uuid())
  cardId        String?     @map("card_id")
  bankAccountId String      @map("bank_account_id")
  categoryId    String      @map("category_id")
  title         String
  type          Type
  amount        Decimal     @db.Decimal(12, 2)
  date          DateTime
  isPaid        Boolean     @default(false) @map("is_paid")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  card          Card?       @relation(fields: [cardId], references: [id], onDelete: Cascade)
  category      Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  bankAccount   BankAccount @relation(fields: [bankAccountId], references: [id], onDelete: Cascade)

  @@map("transactions")
}

enum Type {
  INCOME
  EXPENSE
}
